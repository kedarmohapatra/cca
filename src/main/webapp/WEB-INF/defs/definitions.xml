<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>
    <definition name="template" template="/WEB-INF/ftl/baseLayout.ftl">
    	<put-attribute name="pageTitle" value="Default template"/>
    	<put-attribute name="body" value="/WEB-INF/ftl/home.ftl"/>
	</definition>
	
    <!-- definition name maps to view name (in this case home.ftl) -->
    <definition name="home" extends="template">
        <put-attribute name="pageTitle" value="Home Page"/>
        <put-attribute name="body" value="/WEB-INF/ftl/home.ftl"/>
    </definition>
</tiles-definitions>